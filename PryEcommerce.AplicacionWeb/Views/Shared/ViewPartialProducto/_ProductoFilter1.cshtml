@model IEnumerable<PryEcommerce.Entidades.Producto>

@foreach (var pro in Model)
{
   <div class="row g-4 row-cols-1 mb-5">
      <div class="col">
         <!-- card -->
         <div class="card">
            <!-- card body -->
            <div class="card-body">
               <div class="row align-items-center">
                  <!-- col -->
                  <div class="col-md-4 col-12">
                     <div class="text-center position-relative">
                        @if (pro.estado == true && pro.stock > 0)
                        {
                           <div class="badge bg-success text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                              Disponible
                           </div>
                        }
                        @if (pro.estado == false && pro.stock > 0)
                        {
                           <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                              No Disponible
                           </div>
                        }
                        @if (pro.stock <= 0)
                        {
                           <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">
                              Sin Stock
                           </div>
                        }
                        <a href="">
                           <!-- img -->
                           <img src="@pro.url_img" class="mb-3 img-fluid" alt="@pro.nombre" style="border-radius: 10px; width: 210px; height: 210px">
                        </a>
                     </div>
                  </div>
                  <div class="col-md-8 col-12 flex-grow-1">
                     <!-- heading -->
                     <div class="text-small mb-1">
                        <a href="#!" class="text-decoration-none text-muted"><small>@pro.categoria.nombre</small></a>
                     </div>
                     <h2 class="text-cart">@pro.nombre</h2>
                     <div class="mt-2">
                        <!-- price -->
                        <div>
                           @*<span class="text-dark">$18</span> text-muted text-decoration-line-through *@
                           <span class="text-dark">$@pro.precio</span>
                        </div>
                        <div class="d-flex gap-3 mt-2">
                           @if (pro.estado == true && pro.stock > 0)
                           {
                              <a asp-action="AddCarritoVenta" asp-controller="Shop" asp-route-id="@pro.id" class="btn-dev btn-nawijo btn-sm">
                                 <i class="bi bi-plus"></i>
                                 Add
                              </a>
                           }
                           <a asp-action="Details" asp-controller="Shop" asp-route-id="@pro.id" class="btn-dev btn-nawijo btn-sm">
                              <i class="bi bi-eye"></i>
                              View
                           </a>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
}


